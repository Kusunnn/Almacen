generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}



model herramientas {
  id                Int                @id @default(autoincrement())
  nombre            String             @db.VarChar(100)
  descripcion       String?
  id_tipo           Int?
  id_marca          Int?
  estado            String?            @db.VarChar(50)
  fecha_ingreso     DateTime?          @default(dbgenerated("CURRENT_DATE")) @db.Date
  disponibilidad    Boolean?           @default(true)
  id_almacen        Int?
  foto_herramienta  String?
  almacenes         almacenes?         @relation(fields: [id_almacen], references: [id], onDelete: NoAction, onUpdate: NoAction)
  marcas            marcas?            @relation(fields: [id_marca], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tipos_herramienta tipos_herramienta? @relation(fields: [id_tipo], references: [id], onDelete: NoAction, onUpdate: NoAction)
  historial         historial[]
  prestamos         prestamos[]
}

model historial {
  id               Int           @id @default(autoincrement())
  id_usuario       Int?
  id_herramienta   Int?
  fecha_movimiento DateTime?     @default(now()) @db.Timestamp(6)
  herramientas     herramientas? @relation(fields: [id_herramienta], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model marcas {
  id           Int            @id @default(autoincrement())
  nombre       String         @unique @db.VarChar(100)
  herramientas herramientas[]
}

model roles {
  id       Int        @id @default(autoincrement())
  nombre   String     @unique @db.VarChar(50)
  usuarios usuarios[]
}

model tipos_herramienta {
  id           Int            @id @default(autoincrement())
  nombre       String         @unique @db.VarChar(100)
  herramientas herramientas[]
}

model usuarios {
  id             Int         @id @default(autoincrement())
  nombre         String      @db.VarChar(100)
  edad           Int?
  telefono       String?     @db.VarChar(20)
  direccion      String?
  correo         String      @unique @db.VarChar(100)
  contrasena     String
  id_rol         Int?
  fecha_registro DateTime?   @default(now()) @db.Timestamp(6)
  foto_perfil    String?
  prestamos      prestamos[]
  roles          roles?      @relation(fields: [id_rol], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model prestamos {
  id                        Int           @id @default(autoincrement())
  id_usuario                Int?
  id_herramienta            Int?
  fecha_prestamo            DateTime?     @default(now()) @db.Timestamptz(6)
  fecha_devolucion_estimada DateTime?     @db.Timestamptz(6)
  fecha_devolucion_real     DateTime?     @db.Timestamptz(6)
  estado                    String?       @default("activo")
  observaciones             String?
  herramientas              herramientas? @relation(fields: [id_herramienta], references: [id], onDelete: NoAction, onUpdate: NoAction)
  usuarios                  usuarios?     @relation(fields: [id_usuario], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
